###---A E S T H E T I C S---###

# Variables for colours.
set $bg-color		 #282a36
set $inactive-bg-color   #242830
set $text-color		 #f8f8f2
set $inactive-text-color #44475a
set $urgent-bg-color	 #ff5555
set $indicator           #282a36
set $border-color	 #44475a
set $inactive-bar-color  #282a36

# Colour list:
# $bg-color		Mid-Grey
# $inactive-bg-color	Dark-Grey, Black
# $text-color		White
# $inactive-text-color	Light-Grey
# $urgent-bg-color	Red
# $indicator		Mid-Grey
# $border-color		Lighter-Grey
# $inactive-bar-color	Mid-Grey

set $red		 #ff5555
set $green		 #50fa7b
set $blue		 #bd93f9
set $cyan		 #8be9fd
set $magenta		 #ff79c6
set $yellow		 #f1fa8c

# Window colours.
#class			border		   background	      text		   indicator  child_border
client.focused		$bg-color	   $bg-color	      $text-color	   $cyan      $border-color
client.unfocused	$inactive-bg-color $inactive-bg-color $inactive-text-color $magenta   $bg-color
client.focused_inactive	$inactive-bg-color $inactive-bg-color $inactive-text-color $yellow    $inactive-bg-color
client.urgent		$urgent-bg-color   $urgent-bg-color   $text-color          $green     $urgent-bg-color
client.placeholder      $green		   $green	      $cyan		   $red       $green

client.background	$bg-color

# Set windows to only have a border, number indicates width.
default_border pixel 3
hide_edge_borders smart

# Configuration for bar.
bar {
	position bottom
	tray_output none
        status_command i3blocks -c ~/.config/i3/i3blocks.conf
	colors {
		background $bg-color
		statusline $text-color
		separator #757575
		#class		   border	       background	   text
		focused_workspace  $bg-color	       $bg-color	   $text-color
		inactive_workspace $inactive-bar-color $inactive-bar-color $inactive-text-color
		urgent_workspace   $urgent-bg-color    $urgent-bg-color    $text-color
	}
}

