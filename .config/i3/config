exec_always 			feh --bg-scale /home/sam/pic/blackspace.jpg

# Launch compton.
exec compton -f

# Adjust system volume.
bindsym $mod+F3			exec ponymix decrease 5
bindsym $mod+F4			exec ponymix increase 5
